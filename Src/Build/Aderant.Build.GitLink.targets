<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" 
         ToolsVersion="14.0">

  <Target Name="ApplyGitLink" ><!--Condition="'$(RunGitLink)' == 'true'">-->
    
    <ItemGroup>
      <PDBFiles Include="$(BinModuleDirectory)\*.pdb" />
    </ItemGroup>
    
    <PropertyGroup>
        <url>http://tfs/aderant/ExpertSuite/_apis/git/repositories/$(ModuleName)/{revision}/{filename}</url> <!-- to be rewritten to http://tfs:8080/aderant/ExpertSuite/_apis/git/repositories/Deployment/items?path={filename}&versionType=commit&version={revision} -->
    </PropertyGroup>
    
    <Message Text="%(PDBFiles.FullPath)" />
    <Message Text="ModuleName=$(ModuleName)"/>

    <Exec ContinueOnError="false"
      IgnoreExitCode="false"
      Command="$(BuildToolsDirectory)\GitLink\GitLink.exe %(PDBFiles.FullPath) -u $(url)"/>
    
    
  </Target>

</Project>

